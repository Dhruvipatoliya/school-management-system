<%-include('mHeader')%>
<div class="clearfix"></div>
	
  <div class="content-wrapper">
    <div class="container-fluid">
      <div>
        <%if(messages.success){%>
          <div class="p-3 waves-effect waves-light text-white text-center">
            <%=messages.success%>
          </div>
          <%}%>
      </div>
    <div class="row mt-3">
      <div class="col-lg-12">
         <div class="card">
           <div class="card-body">
           <div class="card-title">Student Update Data</div>
           <hr>
            <form action="/manager/sUpdatedata/<%=data.id%>" enctype="multipart/form-data" method="post">
           <div class="form-group">
            <label for="input-1">Student Name</label>
            <input type="text" name="name" value="<%=data.name%>" class="form-control" id="input-1" placeholder="Enter Your Name">
           </div>
           <div class="form-group">
            <label for="input-2">Student Email</label>
            <input type="email" name="" class="form-control" id="email" placeholder="Enter Your Email Address">
            <p>Old Email ID : <%=data.email%></p>
           </div>
           <div class="form-group">
            <label for="input-3">Student Mobile Number</label>
            <input type="text" name="phone" value="<%=data.phone%>" class="form-control" id="input-3" placeholder="Enter Your Mobile Number">
           </div>
           <div class="form-group">
            <label for="input-4">Father Name</label>
            <input type="text" name="fathername" value="<%=data.fathername%>" class="form-control" id="input-4" placeholder="Enter Your Father Name">
           </div>
           <div class="form-group">
            <label for="input-3">Father Mobile Number</label>
            <input type="text" name="fatherphone" value="<%=data.fatherphone%>" class="form-control" id="input-3" placeholder="Enter Your Father Mobile Number">
           </div>
           <div class="form-group">
            <label for="input-5">Course</label>
            <input type="text" name="course" value="<%=data.course%>" class="form-control" id="input-3" placeholder="Enter Your Course">
           </div>
           <div class="form-group">
            <label for="input-5">Batch Time</label>
            <input type="text" name="batchtime" value="<%=data.batchtime%>" class="form-control" id="input-3" placeholder="Enter Your Batch Time">
           </div>
           <div class="form-group">
            <label for="input-3">Admission Date</label>
            <input type="date" name="admissiondate" value="<%=data.admissiondate%>" class="form-control" id="input-3" placeholder="Enter Your Admission Date">
           </div>
           <div class="form-group">
            <label for="input-3">Fees</label>
            <input type="text" name="feeamount" value="<%=data.feeamount%>" class="form-control" id="input-3" placeholder="Enter Your Fee Amount">
           </div>
           <div class="form-group">
            <label for="input-3">Address</label>
            <input type="text" name="address" value="<%=data.address%>" class="form-control" id="input-3" placeholder="Enter Your Fee Amount">
           </div>
           <div class="form-group">
            <label for="input-3">Enter Your Image</label>
            <input type="file" name="img" class="form-control" id="input-3" placeholder="Enter Your Image">
            <img src="<%=data.img%>" width="50px" alt="">
           </div>
           <div class="form-group py-2">
             <div class="icheck-material-white">
            <input type="checkbox" id="user-checkbox1" checked=""/>
            <label for="user-checkbox1">I Agree Terms & Conditions</label>
            </div>
           </div>
           <div class="form-group">
            <input class="btn btn-light px-5" onclick="sub()" type="submit">
          </div>
          </form>
         </div>
         </div>
      </div>

    </div><!--End Row-->

	<!--start overlay-->
		  <div class="overlay toggle-menu"></div>
		<!--end overlay-->

    </div>
    <!-- End container-fluid-->
    
   </div><!--End content-wrapper-->
   <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
	
    <script>
        function sub(){
            var email = document.getElementById('email').value
            if(email == ''){
                document.getElementById('email').name = ''
            } else {
                document.getElementById('email').name = 'email'
            }
        }
    </script>
<%-include('mFooter')%>