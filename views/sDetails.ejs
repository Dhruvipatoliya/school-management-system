<%-include('mHeader')%>

    <style>
        @import url(https://fonts.googleapis.com/css?family=Roboto:100,300,400,900,700,500,300,100);

        * {
            margin: 0;
            box-sizing: border-box;
        }

        .card-body h2 {
            font-weight: 900;
            font-size: 20px;
            padding: 30px 0 5px 0;
        }

        .body-1 {
            background: #fff;
            font-family: "Roboto", sans-serif;
            background-size: 100%;
            height: 700px;
        }

        .body-1::-webkit-scrollbar {
            width: -0px;
        }

        ::selection {
            background: #f31544;
            color: #fff;
        }

        ::moz-selection {
            background: #f31544;
            color: #fff;
        }

        .body-1 h1 {
            font-size: 1.5em;
            color: #222;
        }

        .body-1 h2 {
            font-size: 1.5em;
            color: #000
        }

        .body-1 h3 {
            font-size: 1.5em;
            font-weight: 300;
            line-height: 2em;
        }

        .body-1 p {
            font-size: 1.3rem;
            color: #000;
            font-weight: 600;
            line-height: 1.4em;
        }

        .body-1 #invoiceholder {
            width: 100%;
            height: 100px;
        }

        .body-1 #headerimage {
            z-index: -1;
            position: relative;
            top: -50px;
            height: 350px;
            -webkit-box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.15),
                inset 0 -2px 4px rgba(0, 0, 0, 0.15);
            -moz-box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.15),
                inset 0 -2px 4px rgba(0, 0, 0, 0.15);
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.15),
                inset 0 -2px 4px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            background-attachment: fixed;
            background-size: 1920px 80%;
            background-position: 50% -90%;
        }

        .item{
            font-weight: 500;
            font-size: 1.1rem;
            color: #000;
        }

        .body-1 #invoice {
            position: relative;
            top: -290px;
            border: solid 1px;
            margin: 0 auto;
            width: 1100px;
            scale: 1.001;
            background: #fff;
        }

        [id*="invoice-"] {
            /* Targets all id with 'col-' */
            border-bottom: 1px solid #eee;
            padding: 30px;
        }

        .body-1 #invoice-top {
            min-height: 120px;
        }

        .body-1 #invoice-mid {
            min-height: 120px;
        }

        .body-1 #invoice-bot {
            min-height: 250px;
        }

        .body-1 .logo {
            float: left;
            height: 60px;
            width: 60px;
            /* background: url(/images/MME\ LOGO1\ \(1\).png); */
            background-size: 60px 60px;
        }

        .body-1 .info {
            display: block;
            display: flex;
            float: left;
            flex-direction: column;
            margin-left: 20px;
        }

        .body-1 .title {
            float: right;
        }

        .body-1 .title p {
            text-align: right;
        }

        .body-1 #project {
            margin-left: 52%;
        }

        .body-1 table {
            width: 100%;
            border-collapse: collapse;
        }

        .body-1 td {
            padding: 5px 0 5px 15px;
            border: 1px solid #eee;
            text-align: left;
        }

        .body-1 .tabletitle {
            padding: 5px;
            background: #afafaf;
        }

        .body-1 .service {
            border: 1px solid #eee;
        }

        .body-1 .item {
            width: 50%;
        }

        .body-1 .itemtext {
            font-size: 1.6rem;
            margin: 0;
            padding: 10px;
        }

        .body-1 #legalcopy {
            margin-top: 30px;
        }

        .body-1 form {
            float: right;
            margin-top: 30px;
            text-align: right;
        }

        .body-1 .effect2 {
            position: relative;
        }

        .body-1 .legal {
            width: 70%;
        }
    </style>

    <div class="clearfix"></div>

    <div class="content-wrapper">
        <div class="container-fluid">
            <div>
                <%if(messages.success){%>
                    <div class="p-3 waves-effect waves-light text-white text-center">
                        <%=messages.success%>
                    </div>
                    <%}%>
            </div>
            <div class="row mt-3">
                <div class="col-lg-4">
                    <div class="card profile-card-2">
                        <div class="card-img-block">
                            <img class="img-fluid" src="<%=data.img%>" style="object-fit: cover;" height="100%"
                                width="100%" alt="Card image cap">
                        </div>
                        <div class="card-body pt-5">
                            <img src="<%=data.img%>" width="50px" style="object-fit: cover;" alt="profile-image"
                                class="profile">
                            <h5 class="card-title">
                                <%=data.name%>
                            </h5>
                            <p class="card-text">
                                <%=data.email%>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <ul class="nav nav-tabs nav-tabs-primary top-icon nav-justified">
                                <li class="nav-item">
                                    <a href="javascript:void();" data-target="#profile" data-toggle="pill"
                                        class="nav-link active"><i class="icon-user"></i> <span
                                            class="hidden-xs">Profile</span></a>
                                </li>
                                <li class="nav-item">
                                    <a href="javascript:void();" data-target="#messages" data-toggle="pill"
                                        class="nav-link"><i class="icon-envelope-open"></i> <span class="hidden-xs">Fee
                                            Receipt</span></a>
                                </li>
                            </ul>
                            <div class="tab-content p-3">
                                <div class="tab-pane active" id="profile">
                                    <h5 class="mb-3">Student Profile</h5>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="table-responsive">
                                                <table class="table table-hover table-striped">
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Name : </strong>
                                                                <%=data.name%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Mobile Number : </strong>
                                                                <%=data.phone%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Father Name : </strong>
                                                                <%=data.fathername%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Father Mobile Number : </strong>
                                                                <%=data.fatherphone%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Course : </strong>
                                                                <%=data.course%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Batch Time : </strong>
                                                                <%=data.batchtime%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Admission Date : </strong>
                                                                <%=data.admissiondate%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Address : </strong>
                                                                <%=data.address%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Fees : </strong>
                                                                <%=data.feeamount%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Pending Fee : </strong>
                                                                <%=data.pending_fee%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <strong>Student Paid Fee : </strong>
                                                                <%=data.paid_fee%>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <button type="submit" onclick="sub()"
                                                                class="btn btn-light px-5">Create PDF</button>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/row-->
                                </div>

                                <div class="tab-pane" id="messages">
                                    <div class="table-responsive">
                                        <form action="/manager/sFeesreceipt/<%=data.id%>" method="post">
                                            <table class="table table-hover table-striped">
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            <div class="form-group">
                                                                <select name="payment_type" class="form-control"
                                                                    id="input-5" id="">
                                                                    <option value="">-- Select Payment Type --</option>
                                                                    <option value="online">Online</option>
                                                                    <option value="cheque">Cheque</option>
                                                                    <option value="cash">Cash</option>
                                                                </select>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <div class="form-group">
                                                                <input type="text" name="student_fee"
                                                                    class="form-control" id="input-3"
                                                                    placeholder="Enter Your Fee">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <div class="form-group">
                                                                <input type="date" name="date" class="form-control"
                                                                    id="input-3" placeholder="Enter Your Date">
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <button type="submit"
                                                                class="btn btn-light px-5">Submit</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </form>
                                    </div>
                                </div>

                                
                            </div>

                        </div>
                    </div>

                </div>
                <section>
                    <% if(last_fees.length==1){%>
                        <div class="body-1" id="feereceipt" style="overflow: auto;">

                            <div id="invoiceholder">

                                <div id="headerimage"></div>
                                <div id="invoice" class="effect2">

                                    <div id="invoice-top"
                                        style="display: flex; justify-content: center; align-items: center;">

                                        <img src="/images/morsy.png" height="63px" alt="">

                                        <div class="info">
                                            <h2 style="font-size:48px; color: #c7242e;"
                                                class="mt-2"> Multimedia <span
                                                    style="color: #135597;">&</span> Education
                                            </h2>
                                        </div><!--End Info-->
                                    </div><!--End InvoiceTop-->



                                    <div id="invoice-mid">

                                        <div class="clientlogo"></div>
                                        <div class="info">
                                            <h2>Name: <%=data.name %>
                                            </h2>
                                            <p class="m-0">student email : <%=data.email%>
                                            </p>
                                            <p class="mt-2">student phone : <%=data.phone%>
                                            </p>
                                        </div>

                                        <div id="project">
                                            <h2>Fees Description</h2>
                                            <p class="fs-2 m-0">Fees paid by :
                                                <%=last_fees[0].payment_type%>
                                            </p>
                                            <p class="mt-2">Date of paying fees :
                                                <%=last_fees[0].date%>
                                            </p>
                                        </div>

                                    </div><!--End Invoice Mid-->

                                    <div id="invoice-bot">

                                        <div id="table">
                                            <table>
                                                <tr class="tabletitle">
                                                    <td class="item" colspan="2">
                                                        <h2>Item Description</h2>
                                                    </td>
                                                </tr>

                                                <tr class="service">
                                                    <td class="tableitem" colspan="3">
                                                        <p class="itemtext">fees paid</p>
                                                    </td>

                                                    <td class="tableitem">
                                                        <p class="itemtext">
                                                            <%=last_fees[0].student_fee%>
                                                        </p>
                                                    </td>
                                                </tr>
                                                <tr class="tabletitle">
                                                    <td colspan="2" style="font-size: 1.2rem;">
                                                        fees in words : <span
                                                            id="fees_in_words"></span></td>
                                                    <td class="Rate">
                                                        <h2>Total : </h2>
                                                    </td>
                                                    <td class="payment">
                                                        <h2 id="fees_words" class="m-0"
                                                            style="transform: translateX(13px);">
                                                            <%=last_fees[0].student_fee%>
                                                        </h2>
                                                    </td>
                                                </tr>

                                            </table>
                                        </div><!--End Table-->


                                    </div><!--End InvoiceBot-->
                                </div><!--End Invoice-->
                            </div><!-- End Invoice Holder-->

                        </div>
                        <%}%>

                </section>

            </div>

            <!--start overlay-->
            <div class="overlay toggle-menu"></div>
            <!--end overlay-->

        </div>
        <!-- End container-fluid-->
    </div><!--End content-wrapper-->



    <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
    <script src="https://cdn.bootcss.com/html2pdf.js/0.9.1/html2pdf.bundle.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.1/html2pdf.bundle.min.js"></script>
    <script>
        function fun() {
            var email = document.getElementById('email').value
            if (email == '') {
                document.getElementById('email').name = ''
            } else {
                document.getElementById('email').name = 'email'
            }
        }

        function sub(){
            var receipt = document.getElementById('feereceipt')
            html2pdf(receipt,{
                filename : 'fee receipt.pdf',
                jsPDF : {unit : 'in', format : 'A3'},
                class : fun
            })
            
        }
    </script>

    <%-include('mFooter')%>